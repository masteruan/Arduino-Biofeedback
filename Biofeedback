//led
int ledPin = 13;

//LCD
#include <LiquidCrystal.h>
LiquidCrystal lcd(12,11,5,4,3,2);

//Time
int sec = 0;
int minuti = 0;

//Temperature
int valTemp = 0;
const int sensorTemp = A1;
float voltage = 0;
float temp = 0;
int val_Adc = 0;

//GRS
int grsSensor = A0;
int gsrVal = 0;
int Gm = 0;

void setup()
{
  //init seriale
  Serial.begin(9600);
  //init lcd
  lcd.begin(16,2);
  //init led
  pinMode(ledPin, OUTPUT);
  digitalWrite(ledPin, LOW);
  lcd.clear();
  lcd.setCursor (0,0);
  lcd.print("Arduino");
  lcd.setCursor (0,1);
  lcd.print("Biofeedback");
}
 
void loop()
{
  
  digitalWrite(ledPin,HIGH);
  
  //1 sec delay
  delay(1000);
  
  //Value GSR
  gsrVal = analogRead (grsSensor);
  if (Gm < gsrVal) {
    Gm = gsrVal;
  }
  
  //Temp in CÂ°
  valTemp = analogRead(sensorTemp);
  voltage = (valTemp / 1024.0) * 5.0;
  temp = (voltage - .5) * 100;
   
  digitalWrite(ledPin,LOW);
  
  
  //upload to serial
  Serial.println("-------------");
  Serial.print("Time ");
  Serial.print(sec);
  Serial.print(":");
  Serial.println(minuti);
  Serial.print("Temp:");
  Serial.println(temp);
  Serial.print("GSR:");
  Serial.println(gsrVal);
  Serial.print("GSR MAX:");
  Serial.println(Gm);
  
  //lcd print
  lcd.clear();
  lcd.setCursor (0,0);
  lcd.print(sec);
  lcd.setCursor(2,0);
  lcd.write(":");
  lcd.setCursor(3,0);
  lcd.print(minuti);
  lcd.setCursor(5,0);
  lcd.write("T:");
  lcd.print(temp);  
  lcd.setCursor(11,0);
  
  //Second row
  lcd.setCursor(0,1);
  lcd.write("GSR:");
  lcd.setCursor (4,1);
  lcd.print(gsrVal);
  lcd.setCursor (8,1);
  lcd.write("GM:");
  lcd.setCursor (11,1);
  lcd.print(Gm);
  
  //add 1 sec
  sec = sec+1;
  
  //add 1 minute
  if (sec==60){
    minuti=minuti + 1;
    sec=0;
  }
}
